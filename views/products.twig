{% extends 'layout.twig' %}

{% block body %}
  <h1>{{title}} <sup><small>(Total : {{totalCount}})</small></sup></h1>
  <div>
    <ul>
      {% for product in products %}
        <li><a href="/product/{{product['id']}}">{{product['name']}}</a></li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
